<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_document_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.emn.trustydrive.FileDetailsActivity"
    android:weightSum="1"
    android:orientation="vertical">

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_weight="0.10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Name:"
            android:textSize="25sp"
            android:layout_marginStart="15dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

        <TextView
            android:id="@+id/documentName"
            android:text="Name"
            android:textSize="20sp"
            android:layout_marginStart="15dp"
            android:textColor="@color/black_semi_transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"  />

    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_weight="0.10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Size:"
            android:textSize="25sp"
            android:layout_marginStart="15dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/documentSize"
            android:text="Size"
            android:textSize="20sp"
            android:layout_marginStart="15dp"
            android:textColor="@color/black_semi_transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"  />

    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_weight="0.10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Date:"
            android:textSize="25sp"
            android:layout_marginStart="15dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/documentDate"
            android:text="Upload date"
            android:textSize="20sp"
            android:layout_marginStart="15dp"
            android:textColor="@color/black_semi_transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"  />

    </LinearLayout>

    <LinearLayout
        android:layout_weight="0.60"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <TextView
                android:text="Stored on:"
                android:textSize="25sp"
                android:layout_marginStart="15dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        <ListView
            android:layout_marginStart="15dp"

            android:id="@+id/cloudAccountsListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>





</LinearLayout>
